<h2>Add New Post</h2>
<div class="wrapper">
	<form method="POST" action="/new">
	  <div class="form-group">
	    <label for="name">Your Name</label><br/>
	    <input type="text" name="post[name]" value="<%=@p.name%>" class="form-control" id="name" placeholder="Name" style="width:400px">
	  </div>
	  <div class="form-group">
	    <label for="content">Post Content</label>
	   <textarea class="form-control" name="post[content]" rows="6" style="width:400px" placeholder="Your Content..."><%=@p.content%></textarea>
	  </div>
	  <button type="submit" class="btn btn-primary">Submit Post</button>
	</form>
</div> <!-- wrapper -->