<h2>Post Comments</h2>

<%@Comments.each do |comment| %>

   <div class = "wrapper" style="border-bottom:2px solid silver;"><br/>
      <div style="font-size:18px">Post Comment <%=comment[0]%><br/><br/>
      	<span style="margin-left:10px; font-style: italic"><%=comment[2] %></span></div><br/><br/>
	  <div>Created at: <span style="font-weight: bold"><%=comment[3] %></span> BY: <span style="font-weight: bold;"><%=comment[1]%></span></div>
   </div><!-- wrapper --> 
	  
 <%end%>

<br/><hr/><br/>
 <h3>Add New Comment</h3>
<div class="wrapper">
	<form method="POST" action="/details/<%=@post_id %>">
	  <div class="form-group">
	    <label for="author">Your Name</label><br/>
	    <input type="text" name="author" value="<%=@author%>" class="form-control" id="author" placeholder="Name" style="width:400px">
	  </div>
	  <div class="form-group">
	    <label for="content">Your Comment</label>
	   <textarea class="form-control" name="content" rows="6" style="width:400px" placeholder="Your Content..."><%=@content%></textarea>
	  </div>
	  <button type="submit" class="btn btn-primary">Submit Comment</button>
	</form>
</div> <!-- wrapper -->